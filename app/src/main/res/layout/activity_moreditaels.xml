<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moreditaels"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardmorditaels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"

        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        card_view:cardElevation="10dp"


        card_view:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageidmore"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="213dp"
                android:layout_weight="1"
                android:focusableInTouchMode="false"
                android:src="@drawable/r"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/nameogpup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gg"
                        android:inputType="textMultiLine"
                        android:paddingTop="0dp"
                        android:text="اسم المعلن | عمرو الشيخ "
                        android:textDirection="rtl"
                        android:textSize="14sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/dateofpost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/en"
                        android:inputType="textMultiLine"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:text="تم النشر في |342342 "
                        android:textDirection="rtl"
                        android:textSize="12dp"></TextView>

                    <TextView
                        android:id="@+id/titlemore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/en"
                        android:inputType="textMultiLine"
                        android:text="تلفون "
                        android:textDirection="rtl"
                        android:textSize="12dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>


                <TextView
                    android:id="@+id/idmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"

                    android:maxLength="100"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="لم يؤمنوا به رغم ما جاء به من منهجية عظيمة راقية تدعو للعزة والحرية والكرامة فكيف سيقبلون منهجية تدعو للخنوع والعبودية والذل !"
                    android:textDirection="rtl"
                    android:textSize="16dp"
                    android:visibility="visible"
                    card_view:fontFamily="@font/gg"></TextView>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/rep_foun_location"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#99CECECE"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/showlocation"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:drawableBottom="@drawable/butblue"
            android:fontFamily="@font/ggggg"
            android:src="@drawable/location_24dp"
            android:textColor="#333131"

            android:textSize="25sp">

        </ImageView>


        <Button

            android:id="@+id/foundit"
            style="@style/Button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:drawableBottom="@drawable/butblue"
            android:fontFamily="@font/ggggg"
            android:text="وجدته"
            android:textColor="#333131"
            android:textSize="25sp">

        </Button>

        <Button

            android:id="@+id/report"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
           android:background="@drawable/report"
            android:fontFamily="@font/ggggg"
            android:text="أبلاغ"
            android:textColor="#333131"
            android:textSize="25sp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_tv_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/tv_report"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:hint="قم بذكر سبب البلاغ"
            android:fontFamily="@font/gg">

        </EditText>

        <Button
            android:id="@+id/bt_sendreport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonwithbackground"
            android:fontFamily="@font/gg"
            android:text="ارسال"
            android:textColor="@color/white"
            android:textSize="22sp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/EditMyPost"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#99CECECE"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/refrish"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:drawableBottom="@drawable/butblue"
            android:fontFamily="@font/ggggg"
            android:src="@drawable/update"
            android:textColor="#333131"
            android:textSize="25sp">
        </ImageView>


        <ImageView

            android:id="@+id/update"
            style="@style/Button2"
            android:src="@drawable/edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:drawableBottom="@drawable/butblue"
            android:fontFamily="@font/ggggg"
            android:text="تعديل"
            android:textColor="#333131"
            android:textSize="25sp">

        </ImageView>

        <ImageView

            android:id="@+id/deleted"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_2"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/report"
            android:fontFamily="@font/ggggg"
            android:text="حذف"
            android:src="@drawable/deleted"
            android:textColor="#333131"
            android:textSize="25sp">

        </ImageView>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/et_update"
        android:layout_width="match_parent"
        android:layout_height="190dp"

        android:background="#99CECECE"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/newtitle"
            android:fontFamily="@font/gg"
            android:hint="اسم الشيء المفقود"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </EditText>

        <EditText
            android:id="@+id/newdescrption"
            android:fontFamily="@font/gg"
            android:hint="قم بوصف الشيء المفقود"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </EditText>

        <Button
            android:id="@+id/sendupdate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/buttonwithbackground"
            android:fontFamily="@font/gg"
            android:hint="قم بالتعديل"
            android:textColor="#ffff">

        </Button>


    </LinearLayout>


</LinearLayout>