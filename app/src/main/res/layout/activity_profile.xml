<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBC02D"
        android:orientation="vertical">

        <ImageView
            android:layout_width="229dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:paddingTop="20dp"
            android:src="@drawable/b"
            >

        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="562dp"
            android:layout_marginTop="20dp"
            android:background="@color/selver"
            app:cardCornerRadius="44dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="59dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profileSittings"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="@drawable/emailpassword"
                        android:fontFamily="@font/gg"
                        android:gravity="center"
                        android:text="اعدادت حسابك"

                        android:textColor="#585656"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="24sp">>

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/logout"
                        android:fontFamily="@font/gg"
                        android:gravity="center"
                        android:text="تسجيل خروج"

                        android:textColor="#585656"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:visibility="gone">

                    </TextView>

                    <TextView
                        android:id="@+id/mypostid"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:background="@drawable/emailpassword"
                        android:fontFamily="@font/gg"
                        android:gravity="center"
                        android:text="منشوراتي"

                        android:textColor="#585656"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="24sp">>

                    </TextView>
                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>