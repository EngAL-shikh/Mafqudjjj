<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FBC02D"
    android:orientation="vertical"
    tools:context=".addlost"
    tools:ignore="ExtraText">
    <ImageView
        android:layout_width="229dp"
        android:layout_height="127dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:paddingTop="20dp"
        android:src="@drawable/b">

    </ImageView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="650dp"
        android:layout_marginTop="-40dp"
        android:background="@color/selver"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            tools:context=".addlost"
            tools:ignore="ExtraText">


            <Spinner
                android:id="@+id/catpost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:animateLayoutChanges="false"
                android:drawablePadding="10dp"
                android:dropDownWidth="match_parent"
                android:fontFamily="@font/gg"
                android:gravity="center|right"
                android:outlineSpotShadowColor="@color/colorPrimary"


                android:padding="15dp">

            </Spinner>

            <Spinner
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:animateLayoutChanges="false"
                android:drawablePadding="10dp"
                android:dropDownWidth="match_parent"
                android:fontFamily="@font/gg"
                android:gravity="center|right"
                android:outlineSpotShadowColor="@color/colorPrimary"


                android:padding="15dp">

            </Spinner>

            <EditText
                android:id="@+id/name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailpassword"
                android:drawablePadding="10dp"
                android:fontFamily="@font/gg"
                android:hint="العنوان"
                android:padding="15dp"
                android:textColor="#585656"
                android:textColorHighlight="#000000"

                android:textColorHint="@color/colorPrimaryDark">

            </EditText>


            <EditText
                android:id="@+id/detailspost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailpassword"
                android:ems="10"
                android:fontFamily="@font/gg"
                android:gravity="start|top"
                android:hint="قم بوصف شيئك المفقود ( اللون - الحجم- الرقم ) "
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textColor="#585656"
                android:textColorHighlight="#000000"
                android:textColorHint="@color/colorPrimaryDark"


                >


            </EditText>

            <EditText
                android:id="@+id/phone_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailpassword"
                android:drawablePadding="10dp"
                android:fontFamily="@font/gg"
                android:hint="رقم الهاتف"
                android:padding="15dp"
                android:textColor="#585656"
                android:textColorHighlight="#000000"
                android:textColorHint="@color/colorPrimaryDark">

            </EditText>

            <EditText
                android:id="@+id/award_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailpassword"
                android:drawablePadding="10dp"
                android:fontFamily="@font/gg"
                android:hint="المكافئة"
                android:padding="15dp"
                android:textColor="#585656"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark">

            </EditText>


            <Button

                android:id="@+id/addlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/butblue"
                android:ems="10"

                android:fontFamily="@font/gg"

                android:inputType="textMultiLine"

                android:padding="15dp"
                android:text="الموقع"
                android:textColor="@color/black"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"
                android:drawableBottom="@drawable/location_24dp"

                android:textSize="15sp">


            </Button>

            <Button
                android:id="@+id/addpost_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/butblue"
                android:ems="10"

                android:fontFamily="@font/gg"

                android:inputType="textMultiLine"

                android:padding="15dp"
                android:text="نشر"
                android:textColor="@color/black"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryDark"


                android:textSize="15sp">


            </Button>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>



